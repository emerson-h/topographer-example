<h1>Welcome to Bob's Amazing Emporium of Wonder!</h1>

<ul>
  <li><%= link_to "Customers!", customers_path %></li>
  <li><%= link_to "Orders!", orders_path %></li>
</ul>

<h2>Inventory Items:</h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Sku code</th>
      <th>Description</th>
      <th>Quantity</th>
      <th>Unit price</th>
      <th>Enabled</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @inventory_items.each do |inventory_item| %>
      <tr>
        <td><%= inventory_item.name %></td>
        <td><%= inventory_item.sku_code %></td>
        <td><%= inventory_item.description %></td>
        <td><%= inventory_item.quantity %></td>
        <td><%= inventory_item.unit_price %></td>
        <td><%= inventory_item.enabled %></td>
        <td><%= link_to 'Show', inventory_item %></td>
        <td><%= link_to 'Edit', edit_inventory_item_path(inventory_item) %></td>
        <td><%= link_to 'Destroy', inventory_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

